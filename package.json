{
  "name": "lang-tablature",
  "version": "1.0.0",
  "description": "Codemirror language support for music tablature",
  "author": "Stanley Ihesiulo <stanihe1901@gmail.com>",
  "license": "ISC",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "lezer-generator src/tablature.grammar -o src/parser && rollup -c",
    "dev": "lezer-generator src/tablature.grammar --names -o src/parser && rollup -c",
    "test": "mocha test/test-*.js"
  },
  "devDependencies": {
    "@lezer/generator": "^0.15.0",
    "mocha": "^9.1.0",
    "rollup": "^2.56.3",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-ts": "^1.4.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@codemirror/highlight": "^0.19.2",
    "@codemirror/language": "^0.19.2",
    "@lezer/lr": "^0.15.1"
  }
}
